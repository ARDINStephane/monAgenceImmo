<div class="card mb-4">
    {% if property.imageName %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height:auto;">
    {% else %}
        <img src="{{ '/images/properties/empty.jpeg' | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height:auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {id: property.id, slug: property.slug})  }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-weight:bold; font-size:2rem">{{ property.formatedPrice }} â‚¬</div>
        <p class="card-text">{{ property.desciption }} | nl2br</p>
    </div>
</div>